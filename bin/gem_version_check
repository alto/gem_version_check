#!/usr/bin/env ruby

$LOAD_PATH.unshift File.expand_path(File.dirname(__FILE__) + '/../lib')

require "rubygems"
require "gem_version_check"

result = nil
if (ARGV[0])
  result = GemVersionCheck::Report.new.generate(ARGV[0])
  puts GemVersionCheck::Formatter::PrettyPrint.new(result)
else 
  exit(0, "No Gemfile.lock url given")
end



